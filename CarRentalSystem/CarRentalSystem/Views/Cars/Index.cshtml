}
    @Scripts.Render("~/bundles/jquery")
    <!--Search bar-->
    <div class="row">
        <div class="col-md-12">
            @using (Ajax.BeginForm("Index", "Cars", new AjaxOptions()
            {
                HttpMethod = "GET",
                InsertionMode = InsertionMode.Replace,
                UpdateTargetId = "grid"
            }))
