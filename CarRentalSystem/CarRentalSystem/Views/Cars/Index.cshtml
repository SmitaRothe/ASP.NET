@using CarRentalSystem.Models
@using CarRentalSystem.Helper
@model PagedList.IPagedList<CarRentalSystem.Models.Car>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<center><h2 style="color:blue">Cars</h2></center>
